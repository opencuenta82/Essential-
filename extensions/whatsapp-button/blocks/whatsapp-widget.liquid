{% comment %} Verificar horarios de atenci√≥n ANTES de mostrar el widget {% endcomment %}
<script>
function isWidgetActiveNow() {
  // Si est√° configurado para 24 horas, siempre activo
  {% if is_active_24_hours == 'true' %}
    return true;
  {% endif %}
  
  const now = new Date();
  const currentDay = now.toLocaleDateString('en-US', { weekday: 'lowercase' });
  const currentTime = now.getHours() * 100 + now.getMinutes();
  
  // Verificar si hoy est√° en los d√≠as activos
  const activeDays = '{{ active_days }}'.split(',');
  if (!activeDays.includes(currentDay)) {
    console.log('‚ùå Widget inactivo: D√≠a no permitido:', currentDay);
    return false;
  }
  
  // Verificar horario
  {% if start_time != blank and end_time != blank %}
    const startTime = parseInt('{{ start_time }}'.replace(':', ''));
    const endTime = parseInt('{{ end_time }}'.replace(':', ''));
    
    if (currentTime >= startTime && currentTime <= endTime) {
      console.log('‚úÖ Widget activo: Dentro del horario');
      return true;
    } else {
      console.log('‚ùå Widget inactivo: Fuera del horario:', currentTime, 'vs', startTime, '-', endTime);
      return false;
    }
  {% endif %}
  
  return true;
}

// Verificar horarios al cargar el script
const isCurrentlyActive = isWidgetActiveNow();
console.log('üïê Estado del widget seg√∫n horarios:', isCurrentlyActive ? 'ACTIVO' : 'INACTIVO');
</script>

